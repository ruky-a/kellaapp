<div class="top container mt-5">


  <!--Section: Content-->
  <section class="text-center">

 

    <!--Tab panels-->
    <div class="tab-content">

      <!--Panel 1-->
      <div class="tab-pane fade show in active" id="panel31" role="tabpanel">

        <!--First row-->
        <div class="row">

          <% @courses.each do |course| %>

          <div class="col-lg-4 col-md-12 mb-4">
            <div class="card">
              <div class="overlay zoom z-depth-2">
                <%= link_to course_path(course) do %>
                <% if course.image.attached? %>
                <%= image_tag course.image, class: 'img-fluid' %>
                <% end %>
                <% end %>
              </div>
              <p class="text-uppercase text-center font-weight-bold my-4"><%= link_to course.title, course_path(course) %></p>

              <!--     <p class="mx-auto">Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit id laborum.</p> -->
              <div class="footer">

                <%= link_to 'Enroll', course_path(course), class: 'btn btn-deep-orange  btn-sm' %>
              </div>
            </div>

          </div>

          <% end %>

        </div>



      </div>



  

    </div>
    <!--Tab panels-->

  </section>

</div>
