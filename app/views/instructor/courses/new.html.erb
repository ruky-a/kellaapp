
<div class="top container">
   <div class="card col-xl-5 col-lg-6 col-md-10 col-sm-12 mx-auto mt-lg-5">
  <!-- Card body -->
  <div class="card-body">

    <!-- Default form subscription -->
     <%= form_for @course, url: instructor_courses_path do |f| %>
      <p class="h4 text-center py-4">Add a new Course</p>

     <%= f.text_field :title, autocomplete: "off", placeholder: 'Title', class: 'form-control' %>
   

      <br>
 <%= f.text_area :description, placeholder: 'Details about course', class: 'form-control' %>
   <br>

    <%= f.number_field :cost, placeholder: 'Price', class: 'form-control' %>
  <br />

    <%= f.file_field :image %>
    <br /><br />

    <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] } %>
    <br />


    
      <div class="text-center py-4 mt-3">
  <%= f.submit "Create", class: 'btn btn-primary' %>
      </div>
  <% end %>
    <!-- Default form subscription -->

  </div>
  <!-- Card body -->

</div>
</div>