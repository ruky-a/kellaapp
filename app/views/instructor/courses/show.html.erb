

<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
<%= image_tag current_course.image, class: 'img-fluid' %>
  <br />
  
  <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning float-right' %>
  <br class="clr" />





<!-- Modal -->
<div class="modal fade" id="newSectionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        </button>
        <h5 class="modal-title" id="newSectionModalLabel">Add a new section</h5>
      </div>
      <%= form_for @section, url: instructor_course_sections_path(current_course) do |f| %>
      <div class="modal-body">
        <%= f.text_field :title %>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
         <%= f.submit "Add a section", class: 'btn btn-primary' %>
       </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newLessonModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        </button>
        <h4 class="modal-title" id="newLessonModalLabel">Add a new lesson</h4>
      </div>
       <%= form_for @lesson, url: "#",html: {id: 'newLessonForm'} do |f| %>
       <div class="modal-body">
        <%= f.text_field :title %>
       <%= f.text_field :content %>
       <%= f.file_field :video %>
       </div>
         <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
       <%= f.submit "Add the lesson" , class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>



<div class="container my-5">


<!--Section: Content-->
<section class="dark-grey-text text-center">


<% current_course.sections.each do |section| %>
<div class="section">
<h3>
<%= section.title %>
</h3>
<div class="row">
<% section.lessons.each do |lesson| %>
<div class="col-md-4 mb-4">
<%= link_to lesson_path(lesson), class: "card hoverable" do %>
<div class="card-body my-4">

<p><i class="fas fa-play fa-2x"></i></p>
<h5 class="black-text mb-0"><%= lesson.title %></h5>

</div>

<% end %>

</div>
<% end %>
</div>
</div>
<% end %>
</div>

</section>
</div>













<div class="text-center">
<% if current_user && current_user == current_course.user %>

<br /><br />

<%= link_to 'Administer', instructor_course_path(current_course), class: "btn btn-deep-orange" %>
<% end %>
</div>

<div class="container">

<div class="col-12">
     <% current_course.sections.each do |section| %>
<div class="section">
<h3>
<%= section.title %>
</h3>
<div class="row">
     <% section.lessons.each do |lesson| %>
<div class="col-12 col-sm-6">
<div class="lesson text-center">
<p><i class="fas fa-play fa-2x"></i></p>
<%= link_to lesson_path(lesson) do %>
<b><%= lesson.title %></b>
<br />
<%= lesson.content %>
<% end %>
</div>
</div>
<% end %>
</div>
<br class="clr" />
</div>
<% end %>
</div>
</div>

