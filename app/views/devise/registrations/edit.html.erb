


<section class="user-profile section">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-3 offset-lg-0">
        <div class="sidebar">
          <!-- User Widget -->
          <div class="widget user">
            <h5 class="text-center"><%= current_user.first_name %> <%=current_user.last_name %></h5>
            <div class="image d-flex justify-content-center">
         

            </div>

          


          </div>
      
        </div>
      </div>

      <div class="col-md-10 offset-md-1 col-lg-9 offset-lg-0">
        <!-- Edit Profile Welcome Text -->
        <div class="widget welcome-message">
          <h2>Edit profile</h2>
        </div>
        <!-- Edit Personal Info -->
        <div class="row">
          <div class="col-lg-6 col-md-6">
            <div class="widget personal-info">
              <h3 class="widget-header user">Edit Personal Information</h3>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <!-- First Name -->
              <div class="form-group">
                <label for="first-name">First Name</label>
                <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
              </div>
              <!-- Last Name -->
              <div class="form-group">
                <label for="last-name">Last Name</label>
                <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
              </div>

              <div class="form-group">
                <label for="email">Email</label>
                <%= f.text_field :email, autofocus: true, class: "form-control" %>
              </div>

            </div>
          </div>
          <div class="col-lg-6 col-md-6">
            <!-- Change Password -->
            <div class="widget change-password">
              <h3 class="widget-header user">Edit Password</h3>

              <!-- Current Password -->
            
              <!-- New Password -->
              <div class="form-group">
                <label for="New_password">New Password</label>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

              </div>

              <div class="form-group">
                <label for="Confirm_password">Confirm New Password</label>
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password", class: "form-control" %>
              </div>
            </div>
            <%= f.submit "Update", class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>





      </div>
    </div>
  </div>
</div>
</div>
</div>
</section>


<%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

<%= link_to "Back", :back %>
