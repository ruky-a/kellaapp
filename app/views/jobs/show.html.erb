  <div class="box container">
    <h3 class="orange-text text-center">Fill in the application form</h3>
    <br />
    <div class="col-md-10 offset-md-1">
      <%= form_for([@job, @job.jobapplications.new]) do |f| %>
      <div class="form-row">
        <div class="col-md-4 mb-3">
          <label for="validationDefault01">First name</label>

          <%= f.text_field :firstname, id: "validationDefault01", class: "form-control", required: true %>

        </div>
        <div class="col-md-4 mb-3">
          <label for="validationDefault02">Last name</label>
          <%= f.text_field :lastname, id: "validationDefault02", class: "form-control", required: true %>
        </div>

      </div>
      <div class="form-row">

        <div class="col-md-4 mb-3">
          <label for="validationDefaultUsername">Email</label>

          <div class="input-group">
            <div class="input-group-prepend">

              <span class="input-group-text" id="inputGroupPrepend21">@</span>
            </div>
            <%= f.email_field :email, id: "validationDefaultUsername", class: "form-control", required: true %>

          </div>
        </div>

        <div class="col-md-4 mb-3">
          <label for="validationDefault03">Phone No</label>
          <%= f.text_field :title, class: "form-control", required: true %>

        </div>


      </div>


      <div class="form-row">
        <div class="col-md-8 ">
          <label for="validationDefault03">Cover letter</label>
          <%= f.text_area :message, class: "form-control", required: true %>

        </div>
      </div>
      <br />

      <div class="col-md-3 mb-3">
        <label for="validationDefault04">Attach Resume</label>
        <%= f.file_field :attachment_file, required: true %>
      </div>



      <button class="btn btn-danger btn-sm" type="submit">Submit application</button>
      <% end %>
    </div>

