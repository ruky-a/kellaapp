                  <div class="md-form">
                    <i class="fas fa-envelope prefix grey-text"></i>
                    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control validate", required: true %>

                  </div>

                  <div class="md-form">
                    <i class="fas fa-phone prefix grey-text"></i>
                    <%= f.text_field :title, placeholder: "Phone number", class: "form-control validate", required: true %>

                  </div>


                  <div class="md-form">
                    <i class="fas fa-tag prefix grey-text"></i>
                    <%= f.text_area :message,  placeholder: "Cover letter", class: "form-control validate" %>
                  </div>

                  <div class="md-form">
                    <i></i>
                    <span class="file-label">Attach Resume</span>

                    <%= f.file_field :attachment_file, required: true %><br />


                  </div>

                </div>
                <div class="modal-footer d-flex justify-content-center">
                  <button class="btn blue-gradient btn-rounded text-bold">Submit</button>
                </div>
