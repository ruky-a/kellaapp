   <div class="top container">
              <div class="row justify-content-center">
                <div class="col-md-12">
                   <%= form_tag search_jobs_path, method: :get do |f| %>
                  <div class="form-row">
                    

                    <div class="form-group col-md-4">
                      <%= text_field_tag :location, nil, placeholder: "Location e.g Lagos", class: "form-control my-2 my-lg-1" %>

                    </div>

                    <div class="form-group col-md-4">
                      <%= select_tag :category, options_for_select(Category.all.map{ |c| [c.name, c.id]}), prompt: "Select category", class: "form-control mt-lg-1 mt-md-2" %>

                    </div>

                  

                    <div class="form-group col-md-2">
                      <%= submit_tag "Find jobs", class: " btn btn-block btn-pink" %>

                    </div>
                  </div>
                  <% end %>
                  
        </div>
      </div>



<%= render 'shared/jobs' %>